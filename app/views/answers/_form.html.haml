= form_for [@question, @answer] do |f|
  -if @answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@answer.errors.count, "error")} prohibited this answer from being saved:"
      %ul
        - @answer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.hidden_field :question_id
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
