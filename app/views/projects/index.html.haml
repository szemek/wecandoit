%h1 Nasze projekty

#new-project-button
  = link_to '+ Nowy projekt', new_project_path, :class => 'btn btn-success'

.projects
  - @projects.each do |project|
    .project-box{'data-project' => project.id}
      .project-info
        .pull-left.half
          = image_tag 'logos/octocat.png'
        .pull-left.half
          %strong Login:
          %span= github_user(project.user)
          %strong Repozytorium:
          %span= github_repo(project.user, project.repo)
      .project-details
        .description
          %strong Opis projektu:
          %span
        .last-commit-message
          %strong Ostatni commit:
          %span
        .last-commit-date
          %strong Data ostatniego commitu:
          %span
